<script>
    function validateForm() {
        var isValid = true;
        
        // Clear previous error states
        document.getElementById('errorMessage').style.display = 'none';
        document.getElementById('gradeAsterisk').style.display = 'none';
        document.getElementById('scaleAsterisk').style.display = 'none';
        document.getElementById('rubricAsterisk').style.display = 'none';
        document.getElementById('commentsAsterisk').style.display = 'none';
        document.getElementById('writingAsterisk').style.display = 'none';
        
        // Get field values
        var grade = document.getElementById('grade').value;
        var scale = document.getElementById('scale').value;
        var rubric = document.getElementById('rubric').value;
        var comments = document.getElementById('comments').value;
        var writing = document.getElementById('writing').value;

        // Check each field
        if (grade === "") {
            document.getElementById('gradeAsterisk').style.display = 'inline';
            isValid = false;
        }
        if (scale === "") {
            document.getElementById('scaleAsterisk').style.display = 'inline';
            isValid = false;
        }
        if (rubric === "") {
            document.getElementById('rubricAsterisk').style.display = 'inline';
            isValid = false;
        }
        if (comments === "") {
            document.getElementById('commentsAsterisk').style.display = 'inline';
            isValid = false;
        }
        if (writing === "") {
            document.getElementById('writingAsterisk').style.display = 'inline';
            isValid = false;
        }

        // If any fields are empty, show error message and scroll to top
        if (!isValid) {
            document.getElementById('errorMessage').style.display = 'block';
            window.scrollTo(0, 0); // Scroll to the top of the page
        } else {
            // Redirect to finished grading page with the form data as query parameters
            var url = "finishedGrading.html?grade=" + encodeURIComponent(grade) +
                      "&scale=" + encodeURIComponent(scale) +
                      "&rubric=" + encodeURIComponent(rubric) +
                      "&comments=" + encodeURIComponent(comments) +
                      "&writing=" + encodeURIComponent(writing);
            window.location.href = url;
        }
    }
</script>

